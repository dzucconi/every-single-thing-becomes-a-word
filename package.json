{
  "name": "every-single-thing-becomes-a-word",
  "version": "1.0.0",
  "description": "...",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test mocha test",
    "watch-html": "pug --watch ./index.pug --out build/",
    "watch-css": "postcss --watch --use autoprefixer index.css -d build/",
    "watch-js": "rollup -w -c",
    "watch": "npm run watch-html & npm run watch-js & npm run watch-css",
    "sync": "browser-sync start --files \"build/*\" --server build",
    "start": "npm run watch & npm run sync",
    "build-html": "pug ./index.pug --out build/",
    "build-css": "postcss --use autoprefixer index.css -d build/",
    "build-js": "rollup -c",
    "build-images": "cp favicon.ico build",
    "build": "npm run build-html & npm run build-js & npm run build-css && npm run build-images",
    "compress-css": "cleancss build/index.css -o build/index.css",
    "compress-js": "uglifyjs build/index.js -o build/index.js",
    "compress": "npm run compress-js && npm run compress-css",
    "s3": "s3-cli --delete-removed --acl-public --config .s3config sync build/ s3://work.damonzucconi.com/$npm_package_name",
    "deploy": "npm run build && npm run compress && npm run s3"
  },
  "author": "Damon Zucconi",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.3.7",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-es2015-rollup": "^1.1.1",
    "browser-sync": "^2.13.0",
    "clean-css": "^3.4.18",
    "mocha": "^2.5.3",
    "postcss-cli": "^2.5.2",
    "pug-cli": "^1.0.0-alpha6",
    "rollup": "^0.33.0",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^3.1.0",
    "rollup-plugin-node-resolve": "^1.7.1",
    "rollup-watch": "^2.4.0",
    "s3-cli": "^0.13.0",
    "should": "^9.0.2",
    "uglify-js": "^2.7.0"
  }
}
